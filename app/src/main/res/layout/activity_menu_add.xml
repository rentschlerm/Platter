<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAddActivity"
    android:background="#F4DDDD">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="546dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="171dp"
        android:layout_marginRight="171dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#FD4B13"
        android:textColorHint="#FD4B13"
        android:background="@color/white"/>

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="149dp"
        android:layout_height="89dp"
        android:layout_below="@+id/edtName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="507dp"
        android:layout_marginRight="507dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:textColor="#FD4B13"
        android:textColorHint="#FD4B13" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="269dp"
        android:layout_below="@+id/edtPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="191dp"
        android:layout_marginLeft="191dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChoose"
        android:layout_width="166dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="80dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:backgroundTint="@color/white"
        android:text="Choose image"
        android:textColor="#FD4B13"
        android:textSize="24sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdd"
        android:layout_width="166dp"
        android:layout_height="88dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="392dp"
        android:backgroundTint="@color/white"
        android:text="Add"
        android:textColor="#FD4B13"
        android:textSize="24sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnList"
        android:layout_width="166dp"
        android:layout_height="88dp"
        android:layout_below="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_marginStart="-32dp"
        android:layout_marginLeft="-32dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/white"
        android:text="Menu List"
        android:textColor="#FD4B13"
        android:textSize="24sp" />
</RelativeLayout>