<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dinerName"
        android:layout_width="561dp"
        android:layout_height="144dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/dinerName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <EditText
        android:id="@+id/dinerEmailAddress"
        android:layout_width="565dp"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/dinerEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinerName"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="523dp"
        android:layout_height="61dp"
        android:text="@string/pagetitle"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tableNumber"
        android:layout_width="186dp"
        android:layout_height="39dp"
        android:layout_marginTop="64dp"
        android:textSize="32sp"
        android:text="@string/tablenumber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_dinerProceed"
        android:layout_width="170dp"
        android:layout_height="86dp"
        android:layout_marginTop="110dp"
        android:text="@string/btn_dinerSubmit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinerEmailAddress"
        app:layout_constraintVertical_bias="0.08" />
</androidx.constraintlayout.widget.ConstraintLayout>