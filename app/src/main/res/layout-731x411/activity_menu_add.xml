<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAddActivity"
    android:background="#F4DDDD">

    <EditText
        android:id="@+id/editName"
        android:layout_width="213dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#FD4B13"
        android:textColorHint="#FD4B13" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="87dp"
        android:layout_height="52dp"
        android:layout_below="@+id/editName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="507dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:textColor="#FD4B13"
        android:textColorHint="#FD4B13" />

    <EditText
        android:id="@+id/editQty"
        android:layout_width="87dp"
        android:layout_height="52dp"
        android:layout_below="@+id/editPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="504dp"
        android:layout_marginRight="504dp"
        android:layout_toEndOf="@+id/editPrice"
        android:background="@color/white"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName"
        android:textColor="#FD4B13"
        android:textColorHint="#FD4B13" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="148dp"
        android:layout_below="@+id/editQty"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChoose"
        android:layout_width="166dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="23dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:backgroundTint="@color/white"
        android:text="Choose image"
        android:textColor="#FD4B13"
        android:textSize="24sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdd"
        android:layout_width="126dp"
        android:layout_height="77dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/white"
        android:text="Add"
        android:textColor="#FD4B13"
        android:textSize="24sp" />

</RelativeLayout>